<%- include('../includes/head.ejs') %>
<!-- Favicon -->
<link rel="icon" href="images/logo.png" type="image/x-icon" />

<!-- Font Awesome CDN Link -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
/>

<!-- Bootstrap CDN CSS Link-->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<!-- Custom CSS Links -->
<link rel="stylesheet" href="CSS/style.css" />
<link rel="stylesheet" href="CSS/responsive.css" />
<body class="product">
  <%- include('../includes/navigation.ejs') %>

  <!-- Banner Section Start -->
  <section class="banner_section">
    <div class="container">
      <div class="banner-content">
        <h1>Product</h1>
      </div>
    </div>
  </section>
  <!-- Banner Section Exit -->

  <!-- Product Section Start -->
  <section class="product_section">
    <div class="container">
      <% for (let product of products) { %>
      <div class="row align-items-center py-5">
        <div class="col-xl-5 col-lg-6 col-12 mb-5">
          <div class="card border-0 me-lg-5">
            <img src="<%= product.imageUrl %>" />
          </div>
        </div>
        <div class="col-xl-7 col-lg-6 col-12 mb-5">
          <div class="product-content">
            <h2><%= product.title %></h2>
            <div class="product-details">
              <p><%= product.description %></p>
              <p>Easy to use and easy to carry.</p>
              <h4>Uses of <%= product.title %></h4>
              <p>Use in all your recipes.</p>
              <h4>Benefits of <%= product.title %></h4>
              <a href="#" class="btn main-btn">Buy Now</a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </section>
  <!-- Product Section Exit -->

  <!-- Footer Section Start -->
  <footer>
    <section class="footer_wrapper mt-3 mt-md-0">
      <div class="container px-5 px-lg-0">
        <div class="row">
          <% footers.forEach(footer => { %>
          <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <h5><%= footer.title %></h5>
            <p class="mb-4 ps-0 company_details"><%= footer.description %></p>
            <div class="contact-info">
              <ul class="list-unstyled">
                <% footer.contact.forEach(info => { %>
                <li>
                  <a href="#"
                    ><i class="fa <%= info.icon %> me-3"></i><%= info.text %></a
                  >
                </li>
                <% }) %>
              </ul>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
      <div class="container-fluid copyright-section">
        <p>Copyright <a href="#"><%= copyright %></a>. All Rights Reserved</p>
      </div>
    </section>
  </footer>
  <!-- Footer Section Exit -->

  <!-- Bootstrap JavaScript CDN -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>

  <!-- JavaScript Custom Link -->
  <script src="JS/main.js"></script>
</body>

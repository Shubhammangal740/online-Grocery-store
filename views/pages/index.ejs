<%- include('../includes/head.ejs') %>
<!-- Favicon -->
<link rel="icon" href="images/logo.png" type="image/x-icon" />

<!-- Font Awesome CDN Link -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
/>

<!-- Lightbox Popup -->
<link rel="stylesheet" href="CSS/lightbox.css" />

<!-- Bootstrap CDN CSS Link-->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<!-- Google Fonts Link -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@100;200;300;400;500;600;700;800;900&family=Roboto:wght@100;300;400;500;700;900&display=swap"
  rel="stylesheet"
/>

<!-- Custom CSS Links -->
<link rel="stylesheet" href="CSS/style.css" />
<link rel="stylesheet" href="CSS/responsive.css" />
<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <!-- Banner Section Start -->
    <section class="banner_section">
      <div class="container">
        <div
          id="carouselExampleCaptions"
          class="carousel slide"
          data-bs-ride="carousel"
        >
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="carousel-caption">
                <div class="banner-content">
                  <h1>Welcome to the Freshest Fruits</h1>
                  <h3>Quality & Freshness Delivered</h3>
                  <p>
                    Discover our wide range of fruits from local farms,
                    delivered fresh to your doorstep.
                  </p>
                  <a href="product.html" class="btn main-btn">all products</a>
                </div>
              </div>
            </div>
            <div class="carousel-item">
              <div class="carousel-caption">
                <div class="banner-content">
                  <h1>Welcome to the Freshest Fruits</h1>
                  <h3>Quality & Freshness Delivered</h3>
                  <p>
                    Discover our wide range of fruits from local farms,
                    delivered fresh to your doorstep.
                  </p>
                  <a href="product.html" class="btn main-btn">all products</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Features Section Start -->
  <section class="feature-section">
    <div class="container">
      <div class="row">
        <div class="col-6 col-lg-3 mb-5">
          <div class="card feature-box">
            <div class="text-center">
              <div class="feature-icon-border">
                <div class="feature-icon">
                  <img
                    src="/uploads/images/feature-icon/ui-chat.svg"
                    alt="Organic Fruits Icon"
                  />
                </div>
              </div>
              <div class="feature-text">
                <h3>Organic Fruits</h3>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3 mb-5">
          <div class="card feature-box">
            <div class="text-center">
              <div class="feature-icon-border">
                <div class="feature-icon">
                  <img
                    src="/uploads/images/feature-icon/truck-loaded.svg"
                    alt="Fast Delivery Icon"
                  />
                </div>
              </div>
              <div class="feature-text">
                <h3>Fast Delivery</h3>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3 mb-5">
          <div class="card feature-box">
            <div class="text-center">
              <div class="feature-icon-border">
                <div class="feature-icon">
                  <img
                    src="/uploads/images/feature-icon/wheat.svg"
                    alt="Quality Guaranteed Icon"
                  />
                </div>
              </div>
              <div class="feature-text">
                <h3>Quality Guaranteed</h3>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6 col-lg-3 mb-5">
          <div class="card feature-box">
            <div class="text-center">
              <div class="feature-icon-border">
                <div class="feature-icon">
                  <img
                    src="/uploads/images/feature-icon/lemon.svg"
                    alt="Customer Support Icon"
                  />
                </div>
              </div>
              <div class="feature-text">
                <h3>Customer Support</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Features Section Exit -->

  <!-- About Section Start -->
  <section class="landing_about_section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-5 col-lg-6 col-sm-8">
          <div class="abut-content">
            <h2>About Our Fruit Store</h2>
            <div class="about-details">
              <p class="fw-bold">
                We bring you the freshest and finest quality fruits.
              </p>
              <p>
                Our mission is to provide you with the best fruits sourced
                directly from local farms.
              </p>
              <p>
                We guarantee freshness and quality in every delivery to your
                home.
              </p>
              <a href="about.html" class="btn main-btn">Read More</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- About Section Exit -->

  <!-- Product Section Start -->
  <section class="landing_product_section">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center pb-5">
          <h2 class="section-title">Our Products</h2>
          <p class="section-subtitle text-capitalize">
            Explore our wide variety of fresh fruits.
          </p>
        </div>
      </div>
      <div class="row mx-0">
        <% for (let product of products) { %>
        <div class="col-lg-3 col-sm-6 mb-5">
          <div class="card product-card">
            <div class="product-img">
              <img
                src="<%= product.imageUrl %>"
                class="img-fluid"
                alt="<%= product.name %>"
              />
            </div>
            <div class="d-flex align-items-center justify-content-between">
              <h3><%= product.name %></h3>
              <span><%= product.price %> KG</span>
            </div>
            <div class="product-details">
              <a href="/product" class="btn main-btn">view products</a>
            </div>
          </div>
        </div>
        <% }; %>
      </div>
    </div>
  </section>
  <!-- Product Section Exit -->

  <!-- Footer Section Start -->
  <footer>
    <section class="footer_wrapper mt-3 mt-md-0">
      <div class="container px-5 px-lg-0">
        <div class="row">
          <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <h5>Fresh Fruit Store</h5>
            <p class="mb-4 ps-0 company_details">
              We provide fresh and organic fruits directly from local farms.
            </p>
            <div class="contact-info">
              <ul class="list-unstyled">
                <li>
                  <a href="#"
                    ><i class="fa fa-home me-3"></i> 123 Fruit Street,
                    Cityville, Country</a
                  >
                </li>
                <li>
                  <a href="#"><i class="fa fa-phone me-3"></i>+1234567890</a>
                </li>
                <li>
                  <a href="#"
                    ><i class="fa fa-envelope me-3"></i>info@fruitstore.com</a
                  >
                </li>
              </ul>
            </div>
          </div>
          <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <h5>customer support</h5>
            <ul class="link-widget p-0">
              <li><a href="faq.html">FAQs</a></li>
              <li><a href="shipping.html">Shipping & Delivery</a></li>
              <li><a href="returns.html">Returns & Refunds</a></li>
              <li><a href="contact.html">Contact Us</a></li>
            </ul>
          </div>
          <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <h5>quick links</h5>
            <ul class="link-widget p-0">
              <li><a href="/">Home</a></li>
              <li><a href="/about">About Us</a></li>
              <li><a href="/product">Products</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div>
          <div class="col-lg-3 col-sm-6 mb-5 mb-lg-0">
            <h5>Newsletter</h5>
            <div class="form-group mb-4">
              <input
                type="email"
                class="form-control bg-transparent text"
                placeholder="Enter Your Email Here"
              />
              <button type="submit" class="btn main-btn">Subscribe</button>
            </div>
            <h5>Stay Connected</h5>
            <ul class="social-network d-flex align-items-center p-0">
              <li>
                <a href="https://facebook.com"
                  ><i class="fab fa-facebook"></i
                ></a>
              </li>
              <li>
                <a href="https://twitter.com"><i class="fab fa-twitter"></i></a>
              </li>
              <li>
                <a href="https://instagram.com"
                  ><i class="fab fa-instagram"></i
                ></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="container-fluid copyright-section">
        <p>Copyright <a href="#">Fresh Fruit Store</a>. All Rights Reserved</p>
      </div>
    </section>
  </footer>
  <!-- Footer Section Exit -->

  <!-- Bootstrap JavaScript CDN -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>

  <!-- JavaScript Custom Link -->
  <script src="JS/main.js"></script>

  <!-- Lightbox Link -->
  <script src="JS/lightbox-plus-jquery.js"></script>
</body>

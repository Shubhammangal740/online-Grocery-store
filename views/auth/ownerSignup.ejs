<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/loginSignup.css" />
    <!-- <link rel="stylesheet" href="/CSS/style.css" /> -->
    <style>
      .form3 {
        width: 25%;
        margin-top: 2%;
      }
    </style>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <form
      class="form3"
      action="/owner-signup"
      method="POST"
      enctype="multipart/form-data"
    >
      <div>
        <label for="name">Owner Name</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div>
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" required />
      </div>
      <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required />
      </div>
      <div>
        <label for="phone">Phone Number</label>
        <input type="tel" id="phone" name="phone" required />
      </div>

      <!-- Dropdown with only one option "Owner" -->
      <div>
        <label for="role">Role</label>
        <select id="role" name="role" required>
          <option value="owner">Owner</option>
        </select>
      </div>

      <div>
        <label for="bio">Store Description</label>
        <textarea
          id="bio"
          name="bio"
          rows="3"
          placeholder="Tell us about your store..."
          required
        ></textarea>
      </div>

      <!-- Image Upload Section -->
      <div>
        <label for="storeImage">Upload Store Picture</label>
        <input type="file" id="storeImage" name="storeImage" required />
      </div>

      <div class="form-check">
        <input type="checkbox" id="check" name="terms" required />
        <label for="check">I agree to the terms and conditions</label>
      </div>
      <button type="submit">Sign Up as Fruit Owner</button>
    </form>
    <script src="/main.js" charset="utf-8"></script>
  </body>
</html>
